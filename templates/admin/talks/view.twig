{% extends "layouts/admin.twig" %}
{% block content %}
    <h2 class="headline">{{ talk.title }}</h2>
    <h4><strong>Submitted by:</strong> <a href="{{ site.url }}/admin/speakers/{{ talk.user_id }}">{{ speaker.first_name }} {{ speaker.last_name }}</a></h4>
    
    <p>{{ talk.description|raw }}</p>
    
    <p><strong>Other Info:</strong> {{ talk.other }}</p>
    
    <p>
        <strong>Slides:</strong> {{ talk.slides }}<br />
        <strong>Type:</strong> {{ talk.type }}<br />
        <strong>Level:</strong> {{ talk.level }}<br />
        <strong>Category:</strong> {{ talk.category }}<br />
        <strong>Desired:</strong> {{ talk.desired }}<br />
        <strong>Sponsor:</strong> {{ talk.sponsor }}<br />
        
    </p>

    {% if otherTalks | length > 0 %}
        <h4><strong>Other talks by this speaker:</strong></h4>
        {% for talk in otherTalks %}
            <a href="{{ site.url}}/admin/talks/{{ talk.id }}">{{ talk.title }}</a><br>
        {% endfor %}
    {% endif %}

    <p><a href="{{ site.url}}/admin/talks" class="btn btn-primary">Return to viewing all talks</a></p>
{% endblock %}